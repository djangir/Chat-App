<h1>Groups</h1>

<%= render "projects/form" %>
<hr>
<hr>
<br>
<br>

<div id="proj_data">

  <% @projects.each do |project| %>
  <div class="alert alert-success" role="alert">
    <h4 class="alert-heading">
    <%=link_to project.user.username, home_url(project.user.id) %>
    </h4> 
    
    <p class="text-center">
      <%=link_to project.title, project %>
    </p>

    <p class="text-end fw-bold">
      <%= "Total #{project.comments.count} Discussions" %>
    </p>
    <p class="text-end fw-bold">
      <%= "By #{project.comments.group("user_id").length} Users" %>
    </p>
   
      <% if project.user_id == current_user.id %>

        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  <% end %>

</div>
<br>

<%= link_to 'New Project', new_project_path, class:"btn btn-warning" %>
