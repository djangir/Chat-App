<h1>Listing comments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comments.each do |comment| %>
  <tr>
    <td><%= comment.user_id %></td>
    <td><%= comment.text %></td>
    <td><%= link_to 'Show', [comment.project, comment] %></td>
    <td><%= link_to 'Edit', edit_project_comment_path(comment.project, comment) %></td>
    <td><%= link_to 'Destroy', [comment.project, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Comment', new_project_comment_path(params[:project_id]) %>
